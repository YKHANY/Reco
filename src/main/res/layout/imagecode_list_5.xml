    		android:adjustViewBounds="true"
    		android:src="@drawable/imagecode_05"/>
        
        <ImageView
            android:id="@+id/imageCodeType5"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignBottom="@+id/imageCode5"
