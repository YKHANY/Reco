<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.recoapp.activity.MainActivity" >
    
    <LinearLayout 
	    android:orientation="vertical"
	    android:background="#ffffff"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:weightSum="13.04">
        
		<RelativeLayout 
		    android:background="#ffffff"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="5.3">
		    
		    <RelativeLayout
		        android:id="@+id/shell0"
		        android:layout_width="210dp"
		        android:layout_height="210dp"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="16dp"
		        android:background="#ffffff" >

			    <ImageView
			        android:id="@+id/shell3"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			        android:src="@drawable/code_create_shell_02" />
			    
			    <ImageView
			        android:id="@+id/imagecode_big"
			        android:layout_width="130dp"
			        android:layout_height="130dp"
			        android:layout_centerInParent="true"
			        android:visibility="invisible"
			        android:src="@drawable/code_create_imagecode_big_01" />
		    
			</RelativeLayout>
			
		    <ImageView
		        android:id="@+id/shell1"
		        android:layout_width="wrap_content"
		        android:layout_height="180dp"
			    android:layout_marginTop="30dp"
		        android:layout_alignParentLeft="true"
		        android:background="#ffffff"
    			android:adjustViewBounds="true"
		        android:scaleType="fitStart"
		        android:src="@drawable/code_create_shell_04" />

		    <ImageView
		        android:id="@+id/shell5"
		        android:layout_width="wrap_content"
		        android:layout_height="130dp"
			    android:layout_marginTop="60dp"
		        android:layout_alignParentRight="true"
		        android:background="#ffffff"
    			android:adjustViewBounds="true"
		        android:scaleType="fitEnd"
		        android:src="@drawable/code_create_shell_05" />

			<ImageView
			    android:id="@+id/shell2"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:layout_marginTop="109dp"
			    android:layout_marginRight="4dp"
			    android:layout_toLeftOf="@+id/shell0"
			    android:scaleType="fitCenter"
			    android:src="@drawable/code_create_shell_06" />
			
			<ImageView
			    android:id="@+id/shell4"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:layout_marginTop="109dp"
			    android:layout_marginLeft="4dp"
			    android:layout_toRightOf="@id/shell0"
			    android:scaleType="fitCenter"
			    android:src="@drawable/code_create_shell_07" />

		</RelativeLayout>
		
		<LinearLayout 
		    android:background="#ffffff"
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1.15"
		    android:weightSum="7.8">
		    
		    <LinearLayout 
			    android:background="#ffffff"
			    android:orientation="horizontal"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="1.85"/>
		    
		    <LinearLayout 
			    android:background="#ffffff"
			    android:orientation="vertical"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="4.1"
			    android:weightSum="1.3">
			    
		        <RelativeLayout 
				    android:background="#ffffff"
				    android:orientation="vertical"
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="0.8">
				    
		            <ImageView 
				        android:id="@+id/text1"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:scaleType="fitCenter"
				        android:src="@drawable/code_create_text_01"/>
		        
				    <EditText 
				        android:id="@+id/text2"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
	    				android:layout_centerInParent="true"
	    				android:background="@null"
						android:focusable="true"
						android:gravity="center"
						android:inputType="text" 
				        android:hint="Please enter your code name"
				        android:textColor="#58585b"
				        android:textSize="11dp"/>
		            
				</RelativeLayout>
			</LinearLayout>
		    
		    <LinearLayout 
			    android:background="#ffffff"
			    android:orientation="horizontal"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="1.85">
		    </LinearLayout>
		</LinearLayout>
		
		<android.support.v4.view.ViewPager
		        android:id="@+id/pager"
		        android:background="#D5D5D5"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="3.15"/>
		
		<com.viewpagerindicator.CirclePageIndicator
		        android:id="@+id/indicator"
		        android:padding="10dip"
		        android:background="#ffffff"
		        android:layout_weight="0.76"
		        android:layout_height="0dp"
		        android:layout_width="match_parent"/>
		
		<LinearLayout
		    	android:id="@+id/colorLayout"
		        android:orientation="horizontal"
		        android:background="#ffffff"
		        android:gravity="center"
		        android:paddingBottom="10dp"
		    	android:layout_width="match_parent"
		    	android:layout_height="0dp"
		    	android:layout_weight="1.6">
		    
		    <RelativeLayout 
		        android:layout_width="30dp"
		        android:layout_height="30dp"
				android:layout_marginLeft="30dp">
		        
		        <ImageView 
			        android:id="@+id/color1_02"
		        	android:layout_width="30dp"
		        	android:layout_height="30dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:visibility="invisible"
			    	android:tag="9"
			        android:src="@drawable/code_create_color_10"/>
			    <ImageView 
			        android:id="@+id/color1_01"
			        android:layout_width="23dp"
			        android:layout_height="23dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:tag="0"
			    	android:onClick="onColorSelect"
			        android:src="@drawable/code_create_color_01"/>
		    </RelativeLayout>
		    
		    <RelativeLayout 
		        android:layout_width="30dp"
		        android:layout_height="30dp"
				android:layout_marginLeft="3dp">
			    <ImageView 
			        android:id="@+id/color2_02"
		        	android:layout_width="30dp"
		        	android:layout_height="30dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:visibility="invisible"
			    	android:tag="10"
			        android:src="@drawable/code_create_color_10"/>
			    <ImageView 
			        android:id="@+id/color2_01"
			        android:layout_width="23dp"
			        android:layout_height="23dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:tag="1"
			    	android:onClick="onColorSelect"
			        android:src="@drawable/code_create_color_02"/>
			</RelativeLayout>
		    
			<RelativeLayout 
		        android:layout_width="30dp"
		        android:layout_height="30dp"
				android:layout_marginLeft="3dp">
			    <ImageView 
			        android:id="@+id/color3_02"
		        	android:layout_width="30dp"
		        	android:layout_height="30dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:visibility="invisible"
			    	android:tag="11"
			        android:src="@drawable/code_create_color_10"/>
			    <ImageView 
			        android:id="@+id/color3_01"
			        android:layout_width="23dp"
			        android:layout_height="23dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:tag="2"
			    	android:onClick="onColorSelect"
			        android:src="@drawable/code_create_color_03"/>
			</RelativeLayout>
			
			<RelativeLayout 
		        android:layout_width="30dp"
		        android:layout_height="30dp"
				android:layout_marginLeft="3dp">
			    <ImageView 
			        android:id="@+id/color4_02"
		        	android:layout_width="30dp"
		        	android:layout_height="30dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:visibility="invisible"
			    	android:tag="12"
			        android:src="@drawable/code_create_color_10"/>
			    <ImageView 
			        android:id="@+id/color4_01"
			        android:layout_width="23dp"
			        android:layout_height="23dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:tag="3"
			    	android:onClick="onColorSelect"
			        android:src="@drawable/code_create_color_04"/>
			</RelativeLayout>
			
			<RelativeLayout 
		        android:layout_width="30dp"
		        android:layout_height="30dp"
				android:layout_marginLeft="3dp">
			    <ImageView 
			        android:id="@+id/color5_02"
		        	android:layout_width="30dp"
		        	android:layout_height="30dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:visibility="invisible"
			    	android:tag="13"
			        android:src="@drawable/code_create_color_10"/>
			    <ImageView 
			        android:id="@+id/color5_01"
			        android:layout_width="23dp"
			        android:layout_height="23dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:tag="4"
			    	android:onClick="onColorSelect"
			        android:src="@drawable/code_create_color_05"/>
			</RelativeLayout>
			
			<RelativeLayout 
		        android:layout_width="30dp"
		        android:layout_height="30dp"
				android:layout_marginLeft="3dp">
			    <ImageView 
			        android:id="@+id/color6_02"
		        	android:layout_width="30dp"
		        	android:layout_height="30dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:visibility="invisible"
			    	android:tag="14"
			        android:src="@drawable/code_create_color_10"/>
			    <ImageView 
			        android:id="@+id/color6_01"
			        android:layout_width="23dp"
			        android:layout_height="23dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:tag="5"
			    	android:onClick="onColorSelect"
			        android:src="@drawable/code_create_color_06"/>
			</RelativeLayout>
			
			<RelativeLayout 
		        android:layout_width="30dp"
		        android:layout_height="30dp"
				android:layout_marginLeft="3dp">
			    <ImageView 
			        android:id="@+id/color7_02"
			        android:layout_width="30dp"
			        android:layout_height="30dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:visibility="invisible"
			    	android:tag="15"
			        android:src="@drawable/code_create_color_10"/>
			    <ImageView 
			        android:id="@+id/color7_01"
			        android:layout_width="23dp"
			        android:layout_height="23dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:tag="6"
			    	android:onClick="onColorSelect"
			        android:src="@drawable/code_create_color_07"/>
			</RelativeLayout>
			
			<RelativeLayout 
		        android:layout_width="30dp"
		        android:layout_height="30dp"
				android:layout_marginLeft="3dp">
			    <ImageView 
			        android:id="@+id/color8_02"
			        android:layout_width="30dp"
			        android:layout_height="30dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:visibility="invisible"
			    	android:tag="16"
			        android:src="@drawable/code_create_color_10"/>
			    <ImageView 
			        android:id="@+id/color8_01"
			        android:layout_width="23dp"
			        android:layout_height="23dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:tag="7"
			    	android:onClick="onColorSelect"
			        android:src="@drawable/code_create_color_08"/>
			</RelativeLayout>
			
			<RelativeLayout 
		        android:layout_width="30dp"
		        android:layout_height="30dp"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="30dp">
			    <ImageView 
			        android:id="@+id/color9_02"
			        android:layout_width="30dp"
			        android:layout_height="30dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:visibility="invisible"
			    	android:tag="17"
			        android:src="@drawable/code_create_color_10"/>
			    <ImageView 
			        android:id="@+id/color9_01"
			        android:layout_width="23dp"
			        android:layout_height="23dp"
			    	android:layout_centerInParent="true"
			        android:scaleType="fitCenter"
			    	android:tag="8"
			    	android:onClick="onColorSelect"
			        android:src="@drawable/code_create_color_09"/>
			</RelativeLayout>
		</LinearLayout>
		
		<TextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.08"
            android:gravity="center"
            android:text="NEXT"
            android:textSize="17dp"
            android:background="#54CEF5"
            android:textColor="#ffffff"
            android:onClick="onNext"/>
	</LinearLayout>
	<!-- drawer layout -->
    <ImageView 
        android:id="@+id/lv_activity_main"
        android:src="@drawable/sliding_menu_02"
        android:scaleType="fitStart"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:onClick="onSlidingClick" />

</android.support.v4.widget.DrawerLayout>
    
